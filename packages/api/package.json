{
  "name": "@repo/api",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.3",
    "@ai-sdk/groq": "^1.2.1",
    "@google-cloud/vertexai": "^1.9.3",
    "@nestjs/mapped-types": "2.1.0",
    "@opentelemetry/instrumentation-redis-4": "^0.47.0",
    "@repo/database": "workspace:*",
    "@supabase/realtime-js": "^2.11.5",
    "@trpc/server": "^11.0.1",
    "@types/ws": "^8.18.0",
    "ai": "4.2.8",
    "google-auth-library": "^9.15.1",
    "langsmith": "^0.3.15",
    "redis": "^4.7.0",
    "ws": "^8.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.14",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2"
  }
}
